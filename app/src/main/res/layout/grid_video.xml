<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_grid"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_video_thumb"
        android:src="@color/putih"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_video_nama"
        android:textColor="@color/putih"
        android:textAlignment="center"
        android:textSize="@dimen/text_title"
        android:layout_below="@+id/image_video_thumb"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_video_ukuran"
        android:textColor="@color/grayGelap"
        android:textAlignment="center"
        android:textSize="@dimen/text_isi"
        android:layout_below="@+id/text_video_nama"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_play_gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />
</RelativeLayout>