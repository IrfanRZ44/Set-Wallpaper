<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putihGelap1"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/putih"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:id="@+id/text_toolbar"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/img_toolbar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_Kategori"
            android:layout_above="@+id/tab_Kategori"
            >

        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="8dp"
            android:id="@+id/tab_Kategori"
            app:tabGravity="fill"
            app:tabMode="fixed"
            style="@style/MyCustomTabLayout"
            android:backgroundTint="@color/putih"
            android:background="@drawable/border_tab_main"
            android:layout_alignParentBottom="true"
            app:tabIndicatorColor="@color/putih"
            >
        </android.support.design.widget.TabLayout>
    </RelativeLayout>
</LinearLayout>